{
  "name": "rich4rdmuvirimi/woo-custom-gateway",
  "description": "Add multiple custom payment gateways to WooCommerce e-commerce plugin.",
  "type": "wordpress-plugin",
  "license": "GNU-V2",
  "autoload": {
    "psr-4": {
      "Rich4rdMuvirimi\\WooCustomGateway\\": "src/",
      "Rich4rdMuvirimi\\WooCustomGateway\\Vendor\\": "vendor/woo-custom-gateway/psr-4"
    },
    "classmap": [
      "vendor/woo-custom-gateway/classes/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Rich4rdMuvirimi\\WooCustomGateway\\Tests\\": "tests/src/",
      "Rich4rdMuvirimi\\WooCustomGateway\\": "src/"
    }
  },
  "config": {
    "platform": {
      "php": "7.3"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "process-timeout": 0
  },
  "scripts": {
    "qc": [
      "@phpcs",
      "@test"
    ],
    "phpcs": [
      "./vendor/bin/phpcs ."
    ],
    "php-cs-setup": [
      "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
      "@phpcs -i"
    ],
    "phpunit": [
      "@php ./vendor/bin/phpunit"
    ],
    "test": [
      "@phpunit"
    ],
    "mozart": [
      "@php ./vendor/bin/mozart compose"
    ],
    "mk-dependencies-dir": [
      "@php -r \"if (!file_exists('./vendor/woo-custom-gateway/classes')) { mkdir('./vendor/woo-custom-gateway/classes', 0777, true); }\""
    ],
    "pre-install-cmd": [
      "@mk-dependencies-dir"
    ],
    "pre-update-cmd": [
      "@mk-dependencies-dir"
    ],
    "post-install-cmd": [
      "@mozart",
      "composer dump-autoload"
    ],
    "post-update-cmd": [
      "@mozart",
      "composer dump-autoload"
    ]
  },
  "authors": [
    {
      "name": "Richard Muvirimi",
      "email": "rich4rdmuvirimi@gmail.com",
      "homepage": "https://richard.co.zw",
      "role": "Developer"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.3",
    "symfony/polyfill-php74": "*",
    "symfony/polyfill-php80": "*",
    "symfony/polyfill-php81": "*",
    "symfony/polyfill-php82": "*",
    "br33f/php-ga4-mp": "^0.1.2",
    "yidas/client-ip": "^1.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "brain/monkey": "^2.6",
    "phpunit/phpunit": "^8",
    "squizlabs/php_codesniffer": "^3.7",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "coenjacobs/mozart": "^0.7.1"
  },
  "extra": {
    "mozart": {
      "dep_namespace": "Rich4rdMuvirimi\\WooCustomGateway\\Vendor\\",
      "dep_directory": "/vendor/woo-custom-gateway/psr-4/",
      "classmap_directory": "/vendor/woo-custom-gateway/classes/",
      "classmap_prefix": "WooCustomGateway_",
      "delete_vendor_directories": true
    }
  }
}
